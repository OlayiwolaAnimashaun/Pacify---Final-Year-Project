<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <Button
        android:id="@+id/close"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:outlineSpotShadowColor="@color/grey"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/close_button"
        app:layout_constraintTop_toTopOf="@id/score_final"
        app:layout_constraintRight_toRightOf="@id/score_final"/>

    <TextView
        android:id="@+id/score_final"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/grey"
        android:text="@string/stress_score"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/upload_results"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/upload"
        app:layout_constraintLeft_toLeftOf="@id/score_final"
        app:layout_constraintRight_toRightOf="@id/score_final"
        app:layout_constraintBottom_toBottomOf="@id/score_final"/>

</androidx.constraintlayout.widget.ConstraintLayout>